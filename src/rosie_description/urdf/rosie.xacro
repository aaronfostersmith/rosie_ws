<?xml version='1.0'?>

<robot name="rosie" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="cameraSize" value="0.05"/>
  <xacro:property name="cameraMass" value="0.1"/>

  <xacro:include filename="$(find rosie_description)/urdf/rosie.gazebo" />
  <xacro:include filename="$(find rosie_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find rosie_description)/urdf/macros.xacro" />


  <link name='base_link'>
    
    <inertial>
      <mass value="2.0"/>
      <!-- Assume Moment of inertia is from a solid cylinder for now -->
	  <inertia
          ixx="0.0209" ixy="0" ixz="0"
          iyy="0.0209" iyz="0"
          izz="0.04"
      />
    </inertial>

    <collision name='collision'>
      <geometry>
        <cylinder radius="0.2" length="0.075"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <geometry>
        <cylinder radius="0.2" length="0.075"/>
      </geometry>
    </visual>
    
  </link>
	
  
  
  <link name='caster'>
    
    <inertial>
      <mass value="0.010"/>
	  <inertia
          ixx="0.0" ixy="0" ixz="0"
          iyy="0.0" iyz="0"
          izz="0.0"
      />
    </inertial>
    
    <visual name='caster_visual'>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </visual>
 
    <collision name='collision'>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <!--surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface-->
    </collision>

  </link>

  <joint type="fixed" name="caster_joint">
    <origin xyz="-0.15 0 -0.0375" rpy="0 0 0"/>
    <child link="caster"/>
    <parent link="base_link"/>
  </joint>

  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.032" length="0.02"/>
      </geometry>
    </collision>
    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.032" length="0.02"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".01167" ixy="0.0" ixz="0.0"
        iyy=".01167" iyz="0.0"
        izz=".01885"/>
    </inertial>
  </link>
	
  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0.05 0.15 -0.0145" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
	

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.032" length="0.02"/>
      </geometry>
    </collision>
    <visual name="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.032" length="0.02"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".01167" ixy="0.0" ixz="0.0"
        iyy=".01167" iyz="0.0"
        izz=".01885"/>
    </inertial>
  </link>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0.05 -0.15 -0.0145" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <!--link name="camera">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${cameraSize} ${cameraSize} ${cameraSize}"/>
      </geometry>
      <material name="green"/>
    </visual>

    <inertial>
      <mass value="${cameraMass}" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <box_inertia m="${cameraMass}" x="${cameraSize}" y="${cameraSize}" z="${cameraSize}" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz=".2 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera"/>
  </joint-->


  <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0 .075" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="hokuyo"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://rosie_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>


</robot>

